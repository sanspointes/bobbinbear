    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rusty_embroider'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rusty_embroider",
                    "--package=rusty_embroider"
                ],
                "filter": {
                    "name": "rusty_embroider",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests of executable 'rusty_embroider'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rusty_embroider",
                    "--package=rusty_embroider"
                ],
                "filter": {
                    "name": "rusty_embroider",
                    "kind": "bin"
                }
            },
            "args": ["--test"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rusty_embroider'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rusty_embroider",
                    "--package=rusty_embroider"
                ],
                "filter": {
                    "name": "rusty_embroider",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'app'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_test",
                    "--package=rusty_embroider"
                ],
                "filter": {
                    "name": "integration_test",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
