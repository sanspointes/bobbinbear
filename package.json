{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:constructables": "turbo run --filter ./packages/constructables dev",
    "dev:solixi": "turbo run --filter ./packages/solixi dev",
    "dev:editor": "turbo run --filter ./packages/editor dev",
    "playground:constructables": "turbo run --filter ./packages/constructables playground",
    "playground:solixi": "turbo run --filter ./packages/solixi playground",
    "playground:editor": "turbo run --filter ./packages/editor playground",
    "lint": "turbo run lint",
    "test:constructables": "pnpm run --filter ./packages/constructables/ test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "eslint-config-prettier": "^8.9.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
